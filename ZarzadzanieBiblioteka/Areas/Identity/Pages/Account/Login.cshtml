@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email"
                                   class="form-control shadow-sm"
                                   autocomplete="username"
                                   placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password"
                                   class="form-control shadow-sm"
                                   type="password"
                                   autocomplete="current-password"
                                   placeholder="Hasło" />
                            <label asp-for="Input.Password">Hasło</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                Zapamiętaj mnie
                            </label>
                        </div>

                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg shadow-sm">Zaloguj się</button>
                        </div>

                        <div class="mt-3 text-center">
                            <p class="mb-1">
                                <a asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
