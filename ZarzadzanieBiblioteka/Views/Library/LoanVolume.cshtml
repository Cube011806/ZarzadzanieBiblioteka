@model Wypozyczenie

<style>
    .card {
        max-width: 500px;
        margin: 0 auto;
    }

    .card-header {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    .form-label {
        font-size: 1rem;
        font-weight: bold;
    }

    .form-control, .form-select {
        border-radius: 0.375rem;
    }

    .btn-info {
        width: 100%;
        font-size: 1.1rem;
    }
</style>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
            <h3>Wypożycz książkę</h3>
        </div>
        <div class="card-body">
            <form asp-action="LoanVolume" method="post">
                <input type="hidden" asp-for="WoluminId" value="@ViewBag.Wolumin.Id" />
                <div class="mb-3 text-center">
                    <h4>@ViewBag.Wolumin.Ksiazka.Tytul</h4>
                </div>

                <div class="mb-3">
                    <label for="UzytkownikId" class="form-label">Użytkownik</label>
                    <select asp-for="UzytkownikId" asp-items="ViewBag.Users" class="form-select" id="UzytkownikId">
                        <option value="">Wybierz użytkownika</option>
                    </select>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-info">Zatwierdź</button>
                </div>
            </form>
        </div>
    </div>
</div>
