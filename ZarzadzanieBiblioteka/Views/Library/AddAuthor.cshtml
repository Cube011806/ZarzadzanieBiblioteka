@model Autor

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header text-center">
            <h3>Dodaj autora</h3>
        </div>
        <div class="card-body">
            <form asp-action="AddAuthor" method="post">
                <div class="mb-3">
                    <label for="Imie" class="form-label">Imię</label>
                    <input type="text" asp-for="Imie" class="form-control" id="Imie" placeholder="Wpisz imię autora" />
                </div>

                <div class="mb-3">
                    <label for="Nazwisko" class="form-label">Nazwisko</label>
                    <input type="text" asp-for="Nazwisko" class="form-control" id="Nazwisko" placeholder="Wpisz nazwisko autora" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-info">Dodaj</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 500px;
        margin: 0 auto;
    }

    .card-header {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    .form-label {
        font-size: 1rem;
        font-weight: bold;
    }

    .form-control {
        border-radius: 0.375rem;
    }

    .btn-info {
        width: 100%;
        font-size: 1.1rem;
    }
</style>
