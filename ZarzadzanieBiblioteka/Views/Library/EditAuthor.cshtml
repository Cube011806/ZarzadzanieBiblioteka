@model Autor

<style>
    .card {
        max-width: 500px;
        margin: 0 auto;
    }

    .card-header {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    .form-label {
        font-size: 1rem;
        font-weight: bold;
    }

    .form-control {
        border-radius: 0.375rem;
    }

    .btn-info {
        width: 100%;
        font-size: 1.1rem;
    }
</style>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Edytuj autora</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditAuthor" method="post">
                        <div class="mb-3">
                            <label asp-for="Imie" class="form-label">Imię</label>
                            <input type="text" class="form-control shadow-sm" asp-for="Imie" placeholder="Edytuj imię autora" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Nazwisko" class="form-label">Nazwisko</label>
                            <input type="text" class="form-control shadow-sm" asp-for="Nazwisko" placeholder="Edytuj nazwisko autora" required />
                        </div>
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">Zmień</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>