@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity.UI.Services
@using Microsoft.AspNetCore.Identity.UI

@inject UserManager<Uzytkownik> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZarzadzanieBiblioteka</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ZarzadzanieBiblioteka.styles.css" asp-append-version="true" />
    <style>
        /* header{
        background-image : url('/images/bookshelf.jpg');
        background-size:contain;
        background-repeat:repeat;
        } */

        /* Styl dla rozwijanego menu */
        .custom-dropdown-menu {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Styl dla pojedyńczych pozycji w rozwijanym menu */
        .custom-dropdown-item {
        color: #343a40;
        padding: 5px 15px;
        transition: background-color 0.3s ease, color 0.3s ease;
        }

        /* Styl po najechaniu na pojedyńczą pozycję w rozwijanym menu */
        .custom-dropdown-item:hover {
        background-color: #007bff;
        color: #ffffff;
        border-radius: 3px;
        }

        /* Styl dla aktywnej pozycji w rozwijanym menu */
        .custom-dropdown-item.active {
        background-color: #0056b3;
        color: #ffffff;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-7 bg-opacity-50">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Library" asp-action="Index">Strona Główna</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="katalogDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Katalog
                                </a>
                                <ul class="dropdown-menu custom-dropdown-menu" aria-labelledby="katalogDropdown">
                                    @foreach (var gatunek in (List<string>)ViewData["Gatunki"])
                                    {
                                        <li>
                                            <a class="dropdown-item custom-dropdown-item" asp-controller="Library" asp-action="Index" asp-route-Gatunek="@gatunek">
                                                @gatunek
                                            </a>
                                        </li>
                                    } 
                                </ul>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Library" asp-action="IndexLoans">Rezerwacje i Wypożyczenia</a>
                            </li>
                            {
                                var id = UserManager.GetUserId(User);
                                if (UserManager.FindByIdAsync(id).Result.AccessLevel == 1)
                                {
                                    <li class="nav-item"> <a class="nav-link text-dark" asp-controller="Library" asp-action="IndexManage">Panel Zarządzania</a> </li>
                                }
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Contact" asp-action="Index">Kontakt</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - System Zarządzania Biblioteką
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
